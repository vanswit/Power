
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Power.BO.ITrainingItem>



<div id="view-container">
    <div id="title-container">
        <h2>Programs and courses</h2>
    </div>
    <div id="content-container">
        <div id="block-list-container">
            @foreach (var item in Model)
            {
            <a href="@Url.Action("Details", "Program", new { id = item.Id })">
                <div class="block-list">
                    @Html.ValueFor(p => item.Name)
                    <img id="trainingitem-image" src="@Url.Content(item.Image.FilePath)" />
                </div>
            </a>
            }
        </div>
            @Html.ActionLink("Add Program", "AddProgram")
        </div>
            </div>
