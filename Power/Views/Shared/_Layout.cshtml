<!DOCTYPE html>
<html>

@using Microsoft.AspNetCore.Identity
@using Power.BO

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<head>
    <title>Power</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div id="body-container">
        <header>
            <div>
                @Html.ActionLink("Login", "Login", "Login", null, null, null, null, null)
                @if (SignInManager.IsSignedIn(User))
                {
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                               Hello @UserManager.GetUserName(User)!
                            </li>
                            <li>
                                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
                            </li>
                        </ul>
                }
            </div>
            <h1>Power</h1>
            <nav>
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home", null, null, null, null, null)</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, null, null, null, null)</li>
                    <li>@Html.ActionLink("Programs", "Index", "Program", null, null, null, null, null)</li>
                    <li>@Html.ActionLink("Media", "Index", "Media", null, null, null, null, null)</li>
                </ul>
            </nav>
        </header>
        <div>
            @RenderBody()
            <footer>
                &copy 2018 Tom Vanswijgenhoven
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js" type="text/javascript"></script>
</body>
</html>
